<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nbdev.androidapp3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ThemeActivity"
            android:theme="@style/MyThemeGreenLime" />
        <activity android:name=".StyleActivity" />
        <activity android:name=".BottomActivity" />
        <activity android:name=".TabActivity" />
        <activity android:name=".RecyclerActivity" />
        <activity
            android:name=".FabActivity"
            android:label="@string/title_activity_fab"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".CollapsingActivity"
            android:label="@string/title_activity_collapsing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BottomSheetActivity" />
        <activity android:name=".SnackBarActivity" />
        <activity android:name=".TextActivity" />
        <activity android:name=".ThemeSelectActivity" />
        <activity android:name=".ButtonsActivity" />
        <activity
            android:name=".ToolbarActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>